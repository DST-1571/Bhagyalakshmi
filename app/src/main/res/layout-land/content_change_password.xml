<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sourceedge.bhagyalakshmi.orders.changepassword.Change_Password"
    tools:showIn="@layout/activity_change_password">

    <RelativeLayout
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/footer"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel_button_title"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_marginRight="@dimen/dimen_1dp"/>

            <Button
                android:id="@+id/save_button"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:text="@string/save_button_title"
                android:textColor="@color/white"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:padding="@dimen/dimen_10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp"
                android:text="@string/old_password"
                android:textSize="@dimen/textsize_16sp"
                android:textColor="@color/black" />
                <EditText
                    android:fontFamily="fonts/Roboto-Bold.ttf"
                    android:padding="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_outline"
                    android:textColorHint="@color/black"
                    android:inputType="textPassword"
                    android:gravity="center_vertical"
                    android:id="@+id/old_password"
                    android:layout_marginBottom="@dimen/dimen_10dp"/>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_15dp"
                    android:text="@string/new_password"
                    android:textSize="@dimen/textsize_16sp"
                    android:textColor="@color/black" />
                <EditText
                    android:fontFamily="fonts/Roboto-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10dp"
                    android:inputType="textPassword"
                    android:background="@drawable/primary_outline"
                    android:gravity="center_vertical"
                    android:id="@+id/new_password"
                    android:layout_marginBottom="@dimen/dimen_10dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_15dp"
                    android:text="@string/confirm_password"
                    android:textSize="@dimen/textsize_16sp"
                    android:textColor="@color/black" />
                <EditText
                    android:fontFamily="fonts/Roboto-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10dp"
                    android:background="@drawable/primary_outline"
                    android:inputType="textPassword"
                    android:gravity="center_vertical"
                    android:id="@+id/confirm_password"/>
            </LinearLayout>




        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>
