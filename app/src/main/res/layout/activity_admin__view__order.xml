<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.sourceedge.bhagyalakshmi.orders.orderpage.controller.Admin_View_Order">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        //bill header
        <LinearLayout
            android:background="@color/primary_400"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/orderdetailsheader"
                android:padding="@dimen/dimen_5dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:weightSum="1"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:text="@string/lable_order_date"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/orderdate"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:maxLines="2"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout

                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:weightSum="1"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:text="@string/lable_order_no"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/ordernumber"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:maxLines="2"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/dimen_5dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:weightSum="1"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:text="@string/placed_by"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/placedby"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:maxLines="2"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:weightSum="1"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/customerlable"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:text="Customer :"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/customername"
                        android:padding="@dimen/dimen_2dp"
                        android:textSize="@dimen/textsize_12sp"
                        android:maxLines="2"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_admin__view__order" />

</android.support.design.widget.CoordinatorLayout>
